extends basepage.pug 

block page-name 
    .nav-link.brand
        .brand__name
            h3 Team
block page-content
    section.mb-5
        h2 Team Members
        article#users
        .team-member.mt-3
            .extra
                div.avatar.rounded-circle.mb-3.shadow-4-strong#team-add-user.row.bg-primary.text-white(data-mdb-toggle="modal" data-mdb-target="#addMemberModal")
                    div +
                h5.mb-2.text-muted.text-center Add User

    div#addMemberModal.modal.fade(tabindex="-1")
        .modal-dialog 
            .modal-content 
                .modal-header
                    h5#modal-title.modal-title Add User
                    button.btn-close(data-mdb-dismiss="modal" aria-label="Close")
                .modal-body
                    form#addMemberForm
                        .form-item.mb-4
                            .form-outline
                                input#firstName.form-control.my-input
                                label.form-label(for="name") First Name
                            div.invalid-msg Include a First Name!
                        .form-item.mb-4
                            .form-outline
                                input#lastName.form-control.my-input
                                label.form-label(for="name") Last Name
                            div.invalid-msg Include a Last Name!
                        .form-item.mb-4
                            label.form-label(for="image") Image (8KB limit)
                            .form-outline
                            input#imageInput.form-control(type="file", accept="image/*")
                            div.invalid-msg#fileInvalid Select a Valid Image!

                        .modal-footer 
                            button#cancel.btn.btn-secondary(data-mdb-dismiss="modal") Close
                            button#addMember.btn.btn-primary(type="submit",data-mdb-dismiss="modal" disabled="") Save
    script(src="../scripts/team.js" type="module") 